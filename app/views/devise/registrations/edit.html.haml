%section.login-block
  .container
    .row
      .col-md-4.login-sec
        .log-in.panel
          .panel-heading
            %h2.text-center Login Now
          = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), method: :put) do |f|
            = f.error_notification
            %form.login-form
              .form-group
                %label.text-uppercase Email
                = f.input :email, required: true, autofocus: true, label: false, input_html: { class: 'form-control' }
              .form-group
                %label.text-uppercase User Name
                = f.input :name, required: true, autofocus: true, label: false, input_html: { class: 'form-control' }
                - if devise_mapping.confirmable? && resource.pending_reconfirmation?
                  %p
                    Currently waiting confirmation for: #{resource.unconfirmed_email}
              .form-group
                %label.text-uppercase New Password
                = f.input :password, required: false, label: false, input_html: { class: 'form-control' }
              .form-group
                %label.text-uppercase Confirm Password
                = f.input :password_confirmation, required: false, label: false, input_html: { class: 'form-control' }
              .form-group
                %label.text-uppercase Current Password
                = f.input :current_password, required: false, label: false, input_html: { class: 'form-control' }
              .form-check
                .btn.btn-login.float-right
                  = f.button :submit, "Update", class: "btn btn-primary"
      .col-md-8.banner-sec
        #carouselExampleIndicators.carousel.slide{"data-ride" => "carousel"}
          %ol.carousel-indicators
            %li.active{"data-slide-to" => "0", "data-target" => "#carouselExampleIndicators"}
            %li{"data-slide-to" => "1", "data-target" => "#carouselExampleIndicators"}
            %li{"data-slide-to" => "2", "data-target" => "#carouselExampleIndicators"}
          .carousel-inner{:role => "listbox"}
            .carousel-item.active
              .d-block.img-fluid{:alt => "First slide"}
                = image_tag("24.jpg",size: "700x550")
              .carousel-caption.d-none.d-md-block
                .banner-text
                  %h2
                  %p
